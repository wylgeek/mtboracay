    function initQueryCols(value) {
        // --同一行的说明、长度和别名变化--
        var row = {};
        row.describe = value.describe;
        row.name = value.name;
        row.length = "";
        row.note = "";
        row.colType = value.type;
        return row;
    }
    function initReturnCols(value) {
        // --同一行的说明、长度和别名变化--
        var row = {};
        row.describe = value.describe;
        row.name = value.name;
        row.length = "";
        row.note = "";
        row.colType = value.type;
        return row;
    }

    /**
     * 设置表字段信息
     */
    function setCols() {
        var dsId = nui.get("dsId").getValue();
        if (!dsId) {
            nui.alert("请选择数据源！");
            return;
        }
        var tbName = nui.get("tbName").getValue();
        if (!tbName) return;
        if (tbName == originTbName) return;
        originTbName = tbName;
        form1.loading("正在获取字段中,请稍等...");
        grid1.clearRows();
        grid2.clearRows();
        $.post("${basePath}/iq/md/getColumnInfo/" + dsId, {
            "tbName": tbName
        }, function (result) {
            if (result.status && result.data && result.data.length > 0) {
                grid1.addRows(dealCols1(result.data));
                grid2.addRows(dealCols2(result.data));
            }
            //nui.alert(result.message);
            showMessage(result.message);
            form1.unmask();
        });
    }

    /**
     * 处理外表字段
     */
    function dealCols1(data) {
        var cols = [];
        $.each(data, function (i, val) {
            if(val.indexed) {
                cols.push({
                    "name": val.name,
                    "describe": val.describe ? val.describe: val.name,
                    "colType": val.type ? val.type : 'STRING',
                    "length": val.length
                });
            }
        });
        return cols;
    }
    function dealCols2(data) {
        var cols = [];
        $.each(data, function (i, val) {
            if(val.stored) {
                cols.push({
                    "name": val.name,
                    "describe": val.describe ? val.describe: val.name,
                    "colType": val.type ? val.type : 'STRING',
                    "length": val.length
                });
            }
        });
        return cols;
    }

    /**
     * 显示提示信息
     */
    function showMessage(message) {
        nui.open({
            url: "${basePath}/goframe/p/im.cm.message",
            title: '提示信息',
            width: 600,
            height: 560,
            onload: function () {
                var iframe = this.getIFrameEl();
                iframe.contentWindow.setData(message);
            }
        });
    }
